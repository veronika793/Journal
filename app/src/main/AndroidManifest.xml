<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veronica.medaily">

    <!--network access-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--not sure for what it was added-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--for opening gallery -->
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--gps based location-->
    <!--<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />-->
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <!--<uses-feature android:name="android.hardware.location.gps" />-->

    <application
        android:name="com.veronica.medaily.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="DATABASE" android:value="me_daily.db" />
        <meta-data android:name="VERSION" android:value="7" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.veronica.medaily" />

        <receiver android:name=".broadcasts.AlarmReceiver">
            <intent-filter>
                <action android:name="com.veronica.medaily.Alarm_Receiver"/>
            </intent-filter>
        </receiver>
        <activity android:name="com.veronica.medaily.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.veronica.medaily.activities.LoginActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity android:name="com.veronica.medaily.activities.RegisterActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity android:name="com.veronica.medaily.activities.HomeActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

    </application>

</manifest>