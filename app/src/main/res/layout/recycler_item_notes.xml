<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:padding="1dp"
    android:weightSum="6"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/container_notes"
        android:padding="25dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="3"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingBottom="5dp"
                android:textSize="25sp"
                android:maxLines="1"
                android:id="@+id/txt_note_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/txt_note_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:visibility="gone"

                    android:gravity="center"
                    android:drawableEnd="@drawable/icon_add_reminder"
                    android:id="@+id/txt_note_reminder"
                    android:drawableRight="@drawable/icon_add_reminder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:drawableEnd="@drawable/icon_info"
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/txt_icon_info"
                    android:drawableRight="@drawable/icon_info" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/txt_note_createdon" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>