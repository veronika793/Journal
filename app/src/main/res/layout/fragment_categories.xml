<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

   <RelativeLayout
       android:background="@color/colorBlack"
       android:id="@+id/search_btn_categories_container"
       android:layout_width="match_parent"
       android:paddingBottom="5dp"
       android:paddingTop="5dp"
       android:layout_height="wrap_content">
      <SearchView
          android:background="@color/colorWhite"
          android:layout_width="match_parent"
          android:queryHint="Search category.."
          android:layout_height="wrap_content"
          android:id="@+id/search_view_categories" />
   </RelativeLayout>

   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_marginTop="2dp"
       android:background="@color/colorLightGrey1"
       android:layout_height="match_parent"
       android:id="@+id/recycler_view_categories"
       android:layout_below="@+id/search_btn_categories_container" />

</RelativeLayout>