<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorHomeBackground"
    android:paddingRight="40dp"
    android:id="@+id/prnt_add_cat"
    android:paddingLeft="40dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_view_add_category"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorDarkGrey1"
        android:textColor="@color/colorWhite"
        android:rotation="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_category"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/txt_note_title_prev"
        android:layout_width="match_parent"
        android:hint="@string/name"
        android:maxLength="40"
        android:maxLines="1"
        android:layout_marginTop="40dp"
        android:inputType="textCapSentences"
        android:scrollbars="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_add_category"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txt_note_content_prev"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:maxLength="95"
        android:maxLines="1"
        android:inputType="textCapSentences"
        android:hint="@string/category_description"
        android:scrollbars="horizontal"
        android:layout_below="@+id/txt_note_title_prev" />

    <com.commonsware.cwac.colormixer.ColorMixer
        android:id="@+id/mixer_edit_category"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_note_content_prev"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_create_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/save"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/mixer_edit_category"
        android:layout_marginTop="20dp" />


</RelativeLayout>