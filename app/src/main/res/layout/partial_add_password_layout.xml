<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_add_password"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp" />

    <Button
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_add_password"
        android:layout_below="@+id/edit_txt_add_password"
        android:layout_alignStart="@+id/edit_txt_add_password"
        android:layout_alignEnd="@+id/edit_txt_add_password" />
</RelativeLayout>