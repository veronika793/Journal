<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/colorHomeBackground"
        android:id="@+id/container_categories"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/left_bottom_borders"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/txt_category_notes_count"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:drawableEnd="@drawable/icon_notes"
            android:layout_alignParentEnd="true"
            android:drawableRight="@drawable/icon_notes" />

        <TextView
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="25dp"
            android:paddingEnd="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/txt_category_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/txt_category_notes_count"
            android:layout_toStartOf="@+id/txt_category_notes_count" />

    </RelativeLayout>
</LinearLayout>