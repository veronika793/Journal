<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/edit_dialog_container"
    android:padding="15dp"
    android:background="@color/colorHomeBackground"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_txt_edit_cat_name"
        android:layout_width="match_parent"
        android:maxLength="40"
        android:textSize="13sp"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:inputType="textCapSentences"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/edit_txt_edit_cat_descr"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:layout_height="wrap_content"
        android:maxLength="95"
        android:inputType="textCapSentences"
        android:layout_below="@+id/edit_txt_edit_cat_name" />


    <com.commonsware.cwac.colormixer.ColorMixer
        android:id="@+id/mixer_edit_category"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/edit_txt_edit_cat_descr"
        android:layout_alignLeft="@+id/edit_txt_edit_cat_descr"
        android:layout_alignStart="@+id/edit_txt_edit_cat_descr"
        android:layout_alignRight="@+id/edit_txt_edit_cat_descr"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/edit_txt_edit_cat_descr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mixer_edit_category"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="13sp"
            android:id="@+id/btn_edit_category" />

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="13sp"
            android:id="@+id/btn_edit_cat_cancel" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_view_edit_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_category"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true" />

</RelativeLayout>