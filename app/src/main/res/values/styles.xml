<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextStyle" >
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="searchBtnStyle">
        <item name="android:background">@drawable/shape_search_btn</item>
    </style>

    <style name="MyTheme" parent="AppTheme" >
        <item name="android:colorBackground">@color/abc_tint_edittext</item>
        <item name="android:textColorPrimaryInverse">@color/abc_search_url_text</item>
    </style>

</resources>
